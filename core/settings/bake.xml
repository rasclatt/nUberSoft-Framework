<?xml version="1.0" encoding="UTF-8"?>
<config>
	<interface>
		<object event="mini_cache_flash" page_live="on">
			<button>
				<image style="max-height: 30px; cursor: pointer;">
					<path>~NBR_MEDIA_IMAGES~/buttons/deleteCache.png</path>
				</image>
				<instructions class="nTrigger delete_cache">
					<action>nbr_delete_cache_folder_ajax</action>
				</instructions>
			</button>
		</object>
		<object event="mini_page_editor_flash" page_live="on">
			<button link="~[CLASS::\Nubersoft\nApp][METHOD::adminUrl]~/?admintool_plugin=text_editor">
				<image style="max-height: 30px; cursor: pointer;">
					<path>~NBR_MEDIA_IMAGES~/buttons/icn_page_edit.png</path>
				</image>
				<instructions class="text_editor">
					<action>nbr_edit_document</action>
				</instructions>
			</button>
		</object>
		<object event="mini_prefs_flash" page_live="on">
			<button>
				<image style="max-height: 30px; cursor: pointer;">
					<path>~NBR_MEDIA_IMAGES~/buttons/pagePrefs.png</path>
				</image>
				<instructions class="nTrigger site_builder">
					<raw>{"action":"nbr_open_site_prefs","FX":{"acton":["body"],"fx":["opacity"]}}</raw>
				</instructions>
			</button>
		</object>
	</interface>
</config>
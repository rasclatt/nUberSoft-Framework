<?xml version="1.0" encoding="UTF-8"?>
<config>
	<action event="login" after="nbr_timezone" request="post">
		<object event="login">
			<class>
				<name>\Nubersoft\HeadProcessor</name>
				<method>login</method>
				<inject>true</inject>
			</class>
			<class>
				<name>\nPlugins\Nubersoft\InspectorPallet</name>
				<method>loginToggle</method>
				<after>\Nubersoft\HeadProcessor\login</after>
			</class>
		</object>
	</action>
	<action event="nbr_load_single_editor" request="get">
		<object event="nbr_load_single_editor">
			<class>
				<name>\nPlugins\Nubersoft\ComponentEditor</name>
				<method>getLayout</method>
				<inject>body</inject>
			</class>
		</object>
	</action>
	<action event="nbr_save_single_editor" request="post">
		<object event="nbr_save_single_editor">
			<class>
				<name>\nPlugins\Nubersoft\ComponentEditor</name>
				<method>saveAjaxRequest</method>
			</class>
		</object>
	</action>
	<action event="logout" request="request" after="nbr_set_time">
		<object event="logout">
			<class>
				<name>\Nubersoft\HeadProcessor</name>
				<method>login</method>
			</class>
		</object>
	</action>
	<action event="recover_password_request" request="post" is_ajax="true">
		<object event="recover_password_request">
			<class>
				<name>\nPlugins\Nubersoft\Password\Model</name>
				<method>sendPassword</method>
			</class>
		</object>
	</action>
</config>